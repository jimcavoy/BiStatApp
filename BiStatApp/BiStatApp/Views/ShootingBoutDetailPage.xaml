<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiStatApp.Views.ShootingBoutDetailPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <CheckBox x:Name="Alpha" CheckedChanged="Alpha_CheckedChanged"/>
                <CheckBox x:Name="Bravo" CheckedChanged="Bravo_CheckedChanged"/>
                <CheckBox x:Name="Charlie" CheckedChanged="Charlie_CheckedChanged"/>
                <CheckBox x:Name="Delta" CheckedChanged="Delta_CheckedChanged"/>
                <CheckBox x:Name="Echo" CheckedChanged="Echo_CheckedChanged"/>
                <Switch x:Name="Position" Toggled="Position_Toggled" VerticalOptions="Center"/>
            </StackLayout>
            <Button Text="Save"
                    TextColor="{StaticResource LightBackgroundColor}"
                    BackgroundColor="{StaticResource Primary}"
                    Command="{Binding SaveCommand}" Grid.Row="1"
                    Margin="10"/>
        </Grid>

        
    </ContentPage.Content>
</ContentPage>