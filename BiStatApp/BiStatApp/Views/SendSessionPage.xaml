<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiStatApp.Views.SendSessionPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="Start" Margin="10">
            <Label x:Name="labelTitle"
                Text="Email Results"
                Style="{DynamicResource TitleStyle}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="textTo" Placeholder="someone@example.com"></Entry>
            <Entry x:Name="textSubject" Placeholder="Subject"></Entry>
            <Editor x:Name="textBody" Placeholder="Message" HeightRequest="200"></Editor>
            <Button x:Name="btnSend" Text="Send Email" Clicked="OnSendBtnClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>