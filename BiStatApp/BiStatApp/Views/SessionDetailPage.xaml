<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="sessionDetailPage"
             x:Class="BiStatApp.Views.SessionDetailPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddShootingBoutCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <TableView Intent="Form" Margin="16">
                <TableRoot>
                    <TableSection>
                        <EntryCell Label="Name" Text="{Binding Path=Session.Name}" />
                        <EntryCell Label="Description" Text="{Binding Path=Session.Description}" />
                    </TableSection>
                    <TableSection>
                        <ViewCell>
                            <DatePicker VerticalOptions="CenterAndExpand" Date="{Binding Path=Session.DateTime}">
                                <DatePicker.Format>dd-MMM-yy</DatePicker.Format>
                            </DatePicker>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>

            <ListView ItemsSource="{Binding Path=ShootingBouts}" 
                      SelectedItem="{Binding SelectedShootingBout, Mode=TwoWay}"
                      HasUnevenRows="True" 
                      ItemSelected="OnBoutSelected"
                      Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="10">
                                    <Image Source="{Binding TargetImage}" HeightRequest="60"/>
                                </StackLayout>
                            </ViewCell.View>
                            <ViewCell.ContextActions>
                                <MenuItem Text="Delete" IsDestructive="true" Command="{Binding Source={x:Reference sessionDetailPage}, Path=ViewModel.DeleteShootingBoutCommand}" CommandParameter="{Binding .}" />
                            </ViewCell.ContextActions>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Text="Save" Command="{Binding SaveCommand}" Grid.Row="2" />
        </Grid>
    </ContentPage.Content>
</ContentPage>