<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiStatApp.Views.SessionDetailPage">
    <ContentPage.Content>
        <TableView Intent="Form" Margin="16">
            <TableRoot>
                <TableSection>
                    <EntryCell Label="Name" Text="{Binding Path=Session.Name}" />
                    <EntryCell Label="Description" Text="{Binding Path=Session.Description}" />
                </TableSection>
                <TableSection>
                    <ViewCell>
                        <DatePicker VerticalOptions="CenterAndExpand" Date="{Binding Path=Session.DateTime}">
                            <DatePicker.Format>dd-MMM-yy</DatePicker.Format>
                        </DatePicker>
                    </ViewCell>
                </TableSection>
                <TableSection Title="Shooting Bouts">
                    <ViewCell>
                        <ListView ItemsSource="{Binding Path=Session.Bouts}"
                                HasUnevenRows="True"
                                SeparatorColor="Gray"
                                HeightRequest="100">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout Orientation="Horizontal" Padding="10">
                                            <Label Text="{Binding Position}" FontSize="Micro" Style="{DynamicResource ListItemTextStyle}"/>
                                            <Label Text="{Binding Misses}" FontSize="Micro" Style="{DynamicResource ListItemTextStyle}"/>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ViewCell>
                </TableSection>
                <TableSection>
                    <ViewCell>
                        <Button Text="Save" Command="{Binding SaveCommand}" />
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>